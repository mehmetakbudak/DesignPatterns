@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-4 offset-4">
        <div class="card shadow">
            <div class="card-body">
                <div class="card-title px-3 pt-3">
                    <h3>Login</h3>
                </div>
                <form class="p-3 mb-5" asp-controller="Account" asp-action="Login">
                    <div class="mb-3">
                        <label class="form-label">Email address</label>
                        <input name="email" type="email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input name="password" type="password" class="form-control">
                    </div>
                    <div class="d-flex bd-highlight">
                        @*<div class="mb-3 form-check flex-fill bd-highlight">
                        <input type="checkbox" class="form-check-input">
                        <label class="form-check-label">Remember me</label>
                        </div>*@
                    </div>
                    <button type="submit" class="btn btn-primary float-end">Sign In</button>
                </form>
            </div>
        </div>
    </div>
</div>